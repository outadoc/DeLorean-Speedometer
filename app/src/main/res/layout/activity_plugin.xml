<FrameLayout
	android:id="@+id/background_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	tools:context=".PluginActivity">

	<FrameLayout
		android:id="@+id/camera_preview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1" />

	<RelativeLayout
		android:id="@+id/speedo_view"
		android:layout_width="450dp"
		android:layout_height="150dp"
		android:layout_gravity="bottom|center"
		android:layout_marginBottom="5dp"
		android:background="@drawable/speedo"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/txt_speed_diz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="17dp"
			android:layout_marginRight="25dp"
			android:layout_toLeftOf="@+id/txt_speed_unit"
			android:textColor="#c21010"
			android:textSize="125sp" />

		<TextView
			android:id="@+id/txt_dot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="10dp"
			android:layout_marginRight="158dp"
			android:padding="0dp"
			android:text="."
			android:textColor="#c21010"
			android:textSize="125sp"
			tools:ignore="HardcodedText" />

		<TextView
			android:id="@+id/txt_speed_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="17dp"
			android:layout_marginRight="-30dp"
			android:layout_toLeftOf="@+id/txt_dot"
			android:textColor="#c21010"
			android:textSize="125sp" />

	</RelativeLayout>

</FrameLayout>
